<%= form_for(@restaurant) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.select(:category, ['chinese', 'italian', 'japanese', 'french', 'belgian'], {include_blank: "Select a category..."}, { :class => 'form_select' }) %>
  <%= f.submit %>
<% end %>


<%= link_to "Back to restaurants", restaurants_path %>

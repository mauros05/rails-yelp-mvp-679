<div>
  <h1>List of Restaurants</h1>
  <%= link_to "Create a new restaurant", new_restaurant_path, class: 'btn btn-success'%>
</div>

<div>
  <ul class="list-group list-group-flush">
    <% @restaurants.each do |restaurant| %>
      <li class="list-group-item"><p class="fs-6"><%= link_to restaurant.name, restaurant_path(restaurant)%></p></li>
    <% end %>
  </ul>
</div>
